<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid android:color="@color/normal_white"/>
        </shape>
    </item>

    <item android:state_activated="true" >
        <shape>
            <solid android:color="@color/normal_blue"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/normal_black"/>
        </shape>
    </item>
</selector>